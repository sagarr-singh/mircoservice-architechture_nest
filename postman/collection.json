{
  "info": {
    "name": "Microservices Gateway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Products",
      "request": {
        "method": "GET",
        "header": [
          { "key": "x-api-key", "value": "supersecretapikey" }
        ],
        "url": { "raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api", "products"] }
      }
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-api-key", "value": "supersecretapikey" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productCode\": \"P001\",\n  \"name\": \"Product 1\",\n  \"description\": \"Sample\",\n  \"rate\": 100.0\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api", "products"] }
      }
    },
    {
      "name": "List Orders",
      "request": {
        "method": "GET",
        "header": [{ "key": "x-api-key", "value": "supersecretapikey" }],
        "url": { "raw": "{{baseUrl}}/api/orders", "host": ["{{baseUrl}}"], "path": ["api", "orders"] }
      }
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-api-key", "value": "supersecretapikey" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customerName\": \"John Doe\",\n  \"customerPhone\": \"9999999999\",\n  \"products\": [{\"productId\":\"<PASTE_PRODUCT_ID>\",\"qty\":1,\"rate\":100}],\n  \"totalAmount\": 100\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/orders", "host": ["{{baseUrl}}"], "path": ["api", "orders"] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" }
  ]
}
